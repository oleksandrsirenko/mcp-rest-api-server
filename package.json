{
  "name": "mcp-rest-api-server",
  "version": "0.1.0",
  "description": "Production-ready MCP server for REST API integration with advanced response processing",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:stdio": "tsx watch src/index.ts --transport=stdio",
    "dev:http": "tsx watch src/index.ts --transport=http",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --transport=stdio",
    "start:http": "node dist/index.js --transport=http",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "setup": "tsx scripts/setup.ts",
    "docker:build": "docker build -t mcp-rest-api-server .",
    "docker:dev": "docker-compose -f docker/docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker/docker-compose.prod.yml up --build",
    "docker:redis": "docker-compose -f docker/docker-compose.dev.yml up redis -d",
    "audit:fix": "npm audit fix",
    "audit:force": "npm audit fix --force",
    "mcp:inspect": "npx @modelcontextprotocol/inspector node dist/index.js --transport=stdio",
    "health": "curl -f http://localhost:3000/health || echo 'Server not running'"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "rest-api",
    "claude",
    "ai",
    "llm",
    "integration",
    "streamable-http",
    "typescript"
  ],
  "author": "Your Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mcp-rest-api-server.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/mcp-rest-api-server/issues"
  },
  "homepage": "https://github.com/yourusername/mcp-rest-api-server#readme",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.19.2",
    "redis": "^4.7.0",
    "zod": "^3.23.8",
    "winston": "^3.14.2",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.10",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/ui": "^2.1.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  }
}
